<?xml version='1.0' encoding='utf-8'?>
<widget id="co.antiblanks" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>antiblanks-template-gulp-browserify-react-backbone-phonegapapp</name>
    <description>
        Boilerplate for Phonegap application development using Gulp, Browserify, React and Backbone
    </description>
    <author email="dan.ivanovic@antiblanks.com" href="http://www.antiblanks.com">
        Daniel Ivanovic
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="orientation" value="portrait" />

    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.1.0" />
    <gap:plugin name="org.apache.cordova.contacts" version="0.2.15" />
    <gap:plugin name="org.apache.cordova.plugin.sms" version="0.1.0" />
    
    <platform name="android">
        <!-- Icons -->
        <icon src="www/res/android/ldpi.png" density="ldpi" />
        <icon src="www/res/android/mdpi.png" density="mdpi" />
        <icon src="www/res/android/hdpi.png" density="hdpi" />
        <icon src="www/res/android/xhdpi.png" density="xhdpi" />

        <!-- Splash screens -->
        <splash src="www/res/android/splash/splash-land-ldpi.png" density="land-ldpi" />
        <splash src="www/res/android/splash/splash-land-mdpi.png" density="land-mdpi" />
        <splash src="www/res/android/splash/splash-land-hdpi.png" density="land-hdpi" />
        <splash src="www/res/android/splash/splash-land-xhdpi.png" density="land-xhdpi" />

        <splash src="www/res/android/splash/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="www/res/android/splash/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="www/res/android/splash/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="www/res/android/splash/splash-port-xhdpi.png" density="port-xhdpi" />
    </platform>
     
    <platform name="ios">
        <!-- Icons -->
        <icon src="www/res/ios/icon/icon-60@3x.png" width="180" height="180" />
        <icon src="www/res/ios/icon/icon-60.png" width="60" height="60" />
        <icon src="www/res/ios/icon/icon-60@2x.png" width="120" height="120" />
        <icon src="www/res/ios/icon/icon-76.png" width="76" height="76" />
        <icon src="www/res/ios/icon/icon-76@2x.png" width="152" height="152" />
        <icon src="www/res/ios/icon/icon-40.png" width="40" height="40" />
        <icon src="www/res/ios/icon/icon-40@2x.png" width="80" height="80" />
        <icon src="www/res/ios/icon/icon.png" width="57" height="57" />
        <icon src="www/res/ios/icon/icon@2x.png" width="114" height="114" />
        <icon src="www/res/ios/icon/icon-72.png" width="72" height="72" />
        <icon src="www/res/ios/icon/icon-72@2x.png" width="144" height="144" />
        <icon src="www/res/ios/icon/icon-small.png" width="29" height="29" />
        <icon src="www/res/ios/icon/icon-small@2x.png" width="58" height="58" />
        <icon src="www/res/ios/icon/icon-50.png" width="50" height="50" />
        <icon src="www/res/ios/icon/icon-50@2x.png" width="100" height="100" />

        <!-- Splash screens -->
        <splash src="www/res/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="www/res/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="www/res/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/res/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/res/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="www/res/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="www/res/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="www/res/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="www/res/ios/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="www/res/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
</widget>